		id          = "rssreadre"
        version     = "1.0.0" >

    <name>Czytnik RSS</name>
    <description>Program do czytania kanałów RSS</description>
    <author  email="n.lewczuk@gmail.com" email2="kusnierz.sebastian@gmail.com">
		Natalia Lewczuk, Sebastian Kuśnierz
	</author>
        
    <!-- test--> 
    <access origin="*"/>
    <allow-navigation href="*" />
